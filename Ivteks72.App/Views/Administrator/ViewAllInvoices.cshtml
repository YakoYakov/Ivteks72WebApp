@model IEnumerable<Ivteks72.App.Models.Invoice.AdminAllInvoicesViewModel>

@{
    ViewData["Title"] = "ViewAllInvoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 div class="jumbotron justify-content-lg-between text-center">All Invoices</h1>

<input type="text" class="form-control text-primary" id="myInput" name="search" placeholder="Search..." />
<table class="table table-striped text-center">
    <thead>
        <tr>
            <th>
                BIlled To
            </th>
            <th>
                Company Name
            </th>
            <th>
                Company Address
            </th>
            <th>
                Date Of Issue
            </th>
            <th>
                Clothing Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Invoice Total Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BIlledToUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfIssue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClothingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceTotalPrice)<span>$</span>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
